{
  "name": "@clarigen/cli",
  "description": "A CLI for generating a Typescript interface for a Clarity contract.",
  "author": "Hank Stoever",
  "version": "1.0.0-next.15",
  "license": "MIT",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "src",
    "oclif.manifest.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsup-node --watch",
    "dev": "tsup-node --watch",
    "build": "shx rm -rf ./dist && tsup-node src/index.ts src/commands/index.ts --splitting false",
    "compile": "ncc build src/index.ts --no-source-map-register -e @oclif/command -e @oclif/errors",
    "build-single-file": "yarn compile && oclif-dev readme",
    "test": "jest",
    "lint": "eslint \"src/**/*.{ts,tsx}\" && prettier  --check src/**/*.ts",
    "typecheck": "tsc --noEmit -p tsconfig-test.json",
    "prepublishOnly": "yarn build",
    "demo": "yarn build && node bin/run"
  },
  "bin": {
    "clarigen": "./bin/run"
  },
  "oclif": {
    "commands": "./dist/commands",
    "bin": "clarigen"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/errors": "^1.3.4",
    "@types/reserved-words": "0.1.0",
    "@types/toposort": "2.0.3",
    "@vercel/ncc": "0.27.0",
    "oclif": "^1.16.1",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@clarigen/core": "1.0.0-next.15",
    "@clarigen/native-bin": "1.0.0-next.15",
    "@clarigen/claridocs": "1.0.0-next.15",
    "@ltd/j-toml": "1.12.2",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "3.2.3",
    "chalk": "4.1.0",
    "chokidar": "3.5.1",
    "micro-stacks": "^0.2.0",
    "ora": "5.4.0",
    "toposort": "2.0.2",
    "reserved-words": "0.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
